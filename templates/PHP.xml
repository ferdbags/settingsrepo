<templateSet group="PHP">
  <template name="pvd" value="echo &quot;&lt;pre&gt;&quot;; var_dump($END$); die();" description="Pre -&gt; Var_Dump -&gt; Die" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="PHP Expression" value="true" />
      <option name="PHP Statement" value="true" />
    </context>
  </template>
  <template name="ppd" value="echo &quot;&lt;pre&gt;&quot;; print_r($END$); die();" description="Pre -&gt; Print_R -&gt; Die" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="PHP Expression" value="true" />
      <option name="PHP Statement" value="true" />
    </context>
  </template>
  <template name="pdos" value="$stmt = $this-&gt;dbh-&gt;prepare(&quot;&#10;    $END$&#10;&quot;);&#10;$stmt-&gt;execute([&#10;    $PARAMETERS$&#10;]);&#10;&#10;$result = $stmt-&gt;fetch();" description="PDO -&gt; Select Statement" toReformat="true" toShortenFQNames="true">
    <variable name="PARAMETERS" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP Expression" value="true" />
      <option name="PHP Statement" value="true" />
    </context>
  </template>
  <template name="pdoi" value="$stmt = $this-&gt;dbh-&gt;prepare(&quot;&#10;    $END$&#10;&quot;);&#10;$stmt-&gt;execute([&#10;    $PARAMETERS$&#10;]);&#10;&#10;" description="PDO -&gt; Insert Statement" toReformat="true" toShortenFQNames="true">
    <variable name="PARAMETERS" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP Expression" value="true" />
      <option name="PHP Statement" value="true" />
    </context>
  </template>
  <template name="curlk" value="$curl = curl_init();&#10;curl_setopt_array($curl, [&#10;    CURLOPT_RETURNTRANSFER =&gt; 1,&#10;    CURLOPT_URL =&gt; '$URL$',&#10;    CURLOPT_USERAGENT =&gt; 'Mozilla/4.0 (compatible; MSIE 6.0; Windows NT 5.1; SV1)',&#10;    CURLOPT_POST =&gt; 1,&#10;    CURLOPT_POSTFIELDS =&gt; [&#10;        'client_id' =&gt; $CLIENTID$,&#10;        'client_secret' =&gt; $CLIENTSECRET$,&#10;        'grant_type' =&gt; 'client_credentials',&#10;    ]&#10;]);&#10;$resp = curl_exec($curl);&#10;$resp = json_decode($resp);&#10;curl_close($curl);" description="cURL Request with Keys" toReformat="true" toShortenFQNames="true">
    <variable name="URL" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="CLIENTID" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="CLIENTSECRET" expression="" defaultValue="" alwaysStopAt="true" />
    <context />
  </template>
  <template name="curlb" value="$curl = curl_init();&#10;curl_setopt_array($curl, [&#10;    CURLOPT_RETURNTRANSFER =&gt; 1,&#10;    CURLOPT_URL =&gt; '$URL$',&#10;    CURLOPT_USERAGENT =&gt; 'Mozilla/4.0 (compatible; MSIE 6.0; Windows NT 5.1; SV1)',&#10;    CURLOPT_POST =&gt; 1,&#10;    CURLOPT_HTTPHEADER  =&gt; [&#10;        &quot;Content-type: application/json&quot;,&#10;        &quot;Authorization: Bearer $BEARER$&quot;,&#10;    ],&#10;    CURLOPT_POSTFIELDS =&gt; json_encode([&#10;        'scope' =&gt; '$SCOPE$',&#10;        $PARAMETERS$&#10;    ])&#10;]);&#10;$resp = json_decode(curl_exec($curl));&#10;curl_close($curl);" description="cURL Request with Bearer Token" toReformat="true" toShortenFQNames="true">
    <variable name="URL" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="BEARER" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="SCOPE" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="PARAMETERS" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP Expression" value="true" />
      <option name="PHP Statement" value="true" />
    </context>
  </template>
</templateSet>